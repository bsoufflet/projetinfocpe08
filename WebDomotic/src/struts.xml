<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <package name="webdomotic" extends="struts-default">	
		<action name="showLogin">
			<result>/pages/login.jsp</result>
		</action>
		<action name="doLogin" class="webdomotic.Login">
			<result name="input">/pages/login.jsp</result>
			<result name="error">/pages/login.jsp</result>
			<result>/pages/main.jsp</result>
		</action>
		<action name="droiteAction" class="webdomotic.DroiteAction">
			<result>/pages/droite.jsp</result>
		</action>
    </package>
</struts>