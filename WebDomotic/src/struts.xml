<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <package name="webdomotic" extends="struts-default">
		<action name="login" class="webdomotic.Login">
			<result name="input">/pages/login.jsp</result>
			<result name="error">/pages/login.jsp</result>
			<result>/pages/main.jsp</result>
		</action>
		<action name="logout" class="webdomotic.Logout" >
			<result name="success">/pages/login.jsp</result>
		</action>
		<action name="vue" class="webdomotic.Vue">
			<result>/pages/vue.jsp</result>
		</action>
		<action name="liste" class="webdomotic.Liste">
			<result>/pages/contenu/liste.jsp</result>
		</action>
		<action name="edition" class="webdomotic.Edition">
			<result>/pages/contenu/edition.jsp</result>
		</action>
		<action name="detail" class="webdomotic.Detail">
			<result>/pages/contenu/detail.jsp</result>
		</action>
    </package>
</struts>